// HERO
.hero(data-section="1")
  .container
    .hero__wrapper
      .hero__play.wow(data-animation-delay=".5s" data-animation-class="wowFadeDown" js-popupVideo href="https://www.youtube.com/watch?v=S_dfq9rFWAE")
        +icon('ico-play')
        include ../../inline-svg/play-circle.svg

      h1.hero__title.wow Поддержка с воздуха для Вашего бизнеса
      h2.hero__subtitle.wow Аэросъемка в более чем 50 городах России <br> и СНГ от профессиональных пилотов
      .hero__cta.wow(data-animation-delay=".5s")
        a(href="#").btn.btn-hero
          span.btn-corner
          span.btn-corner
          span.btn-corner
          span.btn-corner
          span Заказать аэросъемку
      .hero__join.wow Есть коптер? <a href="#">Присоединяйся к нам</a>
      .hero__scroll.wow(data-animation-delay="1s" js-scrollDown data-section-to="2")
        include ../../inline-svg/scroll.svg
        span Скролл вниз
  
  .socials
    a(href="#" target="_blank").social-vk
      +icon('ico-social-vk')
      include ../../inline-svg/social-circle.svg
    a(href="#" target="_blank").social-fb
      +icon('ico-social-fb')
      include ../../inline-svg/social-circle.svg
    a(href="#" target="_blank").social-tg
      +icon('ico-social-tg')
      include ../../inline-svg/social-circle.svg
    a(href="#" target="_blank").social-you
      +icon('ico-social-you')
      include ../../inline-svg/social-circle.svg
